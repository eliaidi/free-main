#!/bin/bash
isUpdate=$1
deploy=$2
version=$3
isSnapshot=$4

snapshot=""
if [ "$isSnapshot" == "y" ]
	snapshot="-SNAPSHOT"
fi
echo " sh deploy y product 0.0.1 y"

if [ "$deploy" != "test" ];then
   if [ "$deploy" != "product" ];then
        echo "you package choose test or product..."
        exit 1
   fi
fi

projectDir=/opt/project
mkfreeDir=/opt/mkfree


cd $projectDir/free-main

if [ "$isUpdate" = "y" ];then
    git pull origin develop
fi

mvn -P$deploy -Dmaven.test.skip=true clean package
rm -rf $mkfreeDir/free-blog/WEB-INF/*
unzip -o $projectDir/free-main/free-blog/target/free-blog-$version$snapshot.war -d $mkfreeDir/free-blog/

tar -zxvf /opt/project/free-main/free-apiservice/target/free-apiservice-0.0.1-SNAPSHOT-run.tar.gz -C /opt/mkfree/free-apiservice/
ln -s /opt/mkfree/free-apiservice/0.0.1-SNAPSHOT/ current

/opt/mkfree/free-apiservice/bin/apiservice restart
/opt/module/jetty/current/bin/jetty.sh restart
